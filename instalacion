sudo apt install xorg git plymouth-themes arctica-greeter-theme-debian-softwaves zsh bat neovim neofetch kitty firefox-esr dunst build-essential rofi fonts-font-awesome xcb cmake gcc libgtk-3-dev ninja-build libgtkmm-3.0-dev libxcb-randr0 libxcb-randr0-dev libxcb-util-dev libxcb-util0-dev libxcb-util1 libxcb-ewmh-dev libxcb-xinerama0 libxcb-xinerama0-dev libxcb-icccm4-dev libxcb-keysyms1-dev libxcb-cursor-dev libxcb-shape0-dev feh picom unzip sxiv ranger
sudo plymouth-set-default-theme --rebuild-initrd spinfinity
sudo sed -i "s/\#GRUB_GFXMODE=640x480/GRUB_GFXMODE=1024x768/g" /etc/default/grub
sudo update-grub
cd resources/config
cp -pr * $HOME/.config/
cd ../
sudo apt install ./packages/lsd_0.21.0_amd64.deb
cp -r wallpapers $HOME
sudo mkdir /usr/share/fonts/nerdfonts
sudo cp fonts/Hack.zip /usr/share/fonts/nerdfonts
sudo unzip /usr/share/fonts/nerdfonts/Hack.zip -d /usr/share/fonts/nerdfonts
sudo rm -f /usr/share/fonts/nerdfonts/*zip
sudo fc-cache -fv
git clone https://github.com/vaxerski/Hypr
cd Hypr
make clear && make release
sudo cp ./build/Hypr /usr/bin
sudo cp ./example/hypr.desktop /usr/share/xsessions
cd ..
